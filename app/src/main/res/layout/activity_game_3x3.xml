<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chholamuri.tictactoe.Game3x3Activity"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/cross"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cross"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/circle"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/circle"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7">


    <TableRow>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button00"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn00"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button01"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn01"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button02"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn02"/>
    </TableRow>

    <TableRow>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button10"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn10"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button11"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn11"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button12"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn12"/>

    </TableRow>

    <TableRow>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button20"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn20"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button21"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn21"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/button22"
            android:src="@drawable/empty"
            android:adjustViewBounds="true"
            android:paddingRight="2dp"
            android:layout_margin="2dp"
            android:onClick="btn22"/>
    </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/strEndMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:visibility="invisible"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_weight="2"/>

</LinearLayout>