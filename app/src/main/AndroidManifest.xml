<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chholamuri.tictactoe" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gameModeActivity"
            android:label="@string/title_activity_game_mode" >
        </activity>
        <activity
            android:name=".DifficultyActivity"
            android:label="@string/title_activity_difficulty"
            android:parentActivityName=".gameModeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chholamuri.tictactoe.gameModeActivity" />
        </activity>
        <activity
            android:name=".Game3x3Activity"
            android:label="@string/title_activity_one_player" >
        </activity>
        <activity
            android:name=".BoardSizeActivity"
            android:label="@string/title_activity_board_size" >
        </activity>
        <activity
            android:name=".Game5x5Activity"
            android:label="@string/title_activity_game5x5" >
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
